{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "dom"],
    "types": ["node", "reflect-metadata"],
    "declaration": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
